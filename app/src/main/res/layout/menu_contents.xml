<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#132D8C"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wlcm_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/hey_how_do_you_feel_now"
        android:layout_gravity="center_horizontal"
        android:textColor="#444444"
        android:fontFamily="@font/righteous"
        android:textSize="28sp"
        />



    <LinearLayout
        android:id="@+id/ll_choosemood"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            >


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/card_happy"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/circular"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/laughing"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_happy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_happy"
                android:layout_alignParentStart="true"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:text="HAPPY" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/card_tired"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/circular"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tired" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_tired"
                android:layout_alignParentEnd="true"
                android:padding="2dp"
                android:layout_marginEnd="60dp"
                android:text="TIRED" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/card_sad"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/circular"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sad" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="70dp"
                android:padding="2dp"
                android:text="SAD" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/card_anger"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/circular"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/anger" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="55dp"
                android:padding="2dp"
                android:text="ANGER" />



        </RelativeLayout>


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/bottom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/feelQuote"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#444444"
            android:fontFamily="@font/righteous"
            android:textSize="28sp"
            />
    </LinearLayout>




</LinearLayout>